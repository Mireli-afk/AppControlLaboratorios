@model AppControlLaboratorios.Models.Usuario

<div class="fondo">
<div class=" d-flex justify-content-center align-items-center mt-3 ">
    <div class="containerInicio">
        <div class="heading">Iniciar sesión</div>

        <form asp-action="Login" method="post" class="form">
            <div class="form-group">
                <!-- Correo Electrónico -->
                <input asp-for="Correo" class="input form-control" type="email" id="email" placeholder="Correo electrónico" required />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <!-- Contraseña -->
                <input asp-for="Contrasena" class="input form-control" type="password" id="password" placeholder="Contraseña" required />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <!-- Botón personalizado -->
            <button class="Btn mt-3" type="submit">
                <div class="sign">
                    <svg viewBox="0 0 512 512">
                        <path d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z"></path>
                    </svg>
                </div>
                <div class="text">Ingresar</div>
            </button>
        </form>

        <!-- Política de privacidad -->
        <span class="agreement">
            <a href="#">Política de privacidad</a>
        </span>
    </div>
</div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}