@model AppControlLaboratorios.Models.Usuario
<head>
    <title>@ViewData["Title"]</title>
</head>
<body class="row justify-content-center">
    <div class="row section2-details py-5 d-flex justify-content-center align-items-center">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <!-- Encabezado con el nombre del usuario -->
                <h1 class="container text-center mb-4 text-white">¡Bienvenido(a) @Model.Nombre @Model.Apellidos! </h1>
            </div>
            <!-- Botones de laboratorio -->
            <div class="row justify-content-center">
                <div class="row justify-content-center">
                    <div class="col-10 col-md-3 mb-3">
                        <button class="boton-vista text-light btn btn-primary btn-block" onclick="window.location.href='/Asistencias/Index';">
                            Asistencias
                        </button>
                    </div>
                    <div class="col-10 col-md-3 mb-3">
                        <button class="boton-vista text-light btn btn-primary btn-block" onclick="window.location.href='/Cursos/Index';">
                            Cursos
                        </button>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-10 col-md-3 mb-3">
                        <button class="boton-vista text-light btn btn-primary btn-block" onclick="window.location.href='/Usuarios/Index';">
                            Usuarios
                        </button>
                    </div>
                    <div class="col-10 col-md-3 mb-3">
                        <button class="boton-vista text-light btn btn-primary btn-block" onclick="window.location.href='/Horarios/Index';">
                            Horarios
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

