@model AppControlLaboratorios.Models.Horario

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<body class="body">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Registrar Horario</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group mb-2">
                                <input asp-for="HoraIni" class="form-control" placeholder="Hora de inicio" />
                                <span asp-validation-for="HoraIni" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-2">
                                <input asp-for="HoraFin" class="form-control" placeholder="Hora de fin" />
                                <span asp-validation-for="HoraFin" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-2">
                                <input asp-for="UsuarioId" class="form-control" placeholder="Id del docente" />
                            </div>
                            <div class="form-group mb-2">
                                <select asp-for="LaboratorioId" class="form-control" asp-items="ViewBag.LaboratorioId"></select>
                            </div>
                            <div class="form-group mb-2">
                                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId"></select>
                            </div>
                            <div class="form-group d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-success btn-lg btn-block">Crear</button>
                                <a asp-action="Index" class="btn btn-secondary btn-lg btn-block mt-2">Regresar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
